# 데이터베이스 설정
POSTGRES_DB=capstone_db
POSTGRES_USER=capstone_user
POSTGRES_PASSWORD=your_password_here
DATABASE_URL=postgresql://capstone_user:your_password_here@postgres:5432/capstone_db

# JWT 설정
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API 키 설정
PERPLEXITY_API_KEY=your-perplexity-api-key
GOOGLE_API_KEY=your-google-api-key
NAVER_CLOVA_CLIENT_ID=your-naver-clova-client-id
NAVER_CLOVA_CLIENT_SECRET=your-naver-clova-client-secret

# AI 팟캐스트 생성 시스템 설정
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
AI_CONFIG_PATH=../AI/config/company_config.json
AI_OUTPUT_DIR=../AI/data/output
AI_TEMP_DIR=../AI/data/temp
AI_LLM_MODEL=gemini-1.5-flash
AI_LLM_TEMPERATURE=0.7
AI_LLM_MAX_TOKENS=4000
AI_TTS_VOICE_MALE=ko-KR-Standard-A
AI_TTS_VOICE_FEMALE=ko-KR-Standard-C
AI_TTS_SPEAKING_RATE=1.0
AI_TTS_PITCH=0.0
AI_SEARCH_RECENCY=week
AI_MAX_ARTICLES=10
AI_HOST1_NAME=김테크
AI_HOST2_NAME=박AI

# Redis 설정
REDIS_URL=redis://redis:6379

# 파일 업로드 설정
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=/app/uploads

# CORS 설정
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 로깅 설정
LOG_LEVEL=INFO
