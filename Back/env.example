# 데이터베이스 설정
POSTGRES_DB=capstone_db
POSTGRES_USER=capstone_user
POSTGRES_PASSWORD=your_password_here
DATABASE_URL=postgresql://capstone_user:your_password_here@postgres:5432/capstone_db

# JWT 설정
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API 키 설정
PERPLEXITY_API_KEY=your-perplexity-api-key
GOOGLE_API_KEY=your-google-api-key
NAVER_CLOVA_CLIENT_ID=your-naver-clova-client-id
NAVER_CLOVA_CLIENT_SECRET=your-naver-clova-client-secret

# Redis 설정
REDIS_URL=redis://redis:6379

# 파일 업로드 설정
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=/app/uploads

# CORS 설정
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 로깅 설정
LOG_LEVEL=INFO
