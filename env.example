# ===========================================
# 데이터베이스 설정
# ===========================================
POSTGRES_DB=capstone_db
POSTGRES_USER=capstone_user
POSTGRES_PASSWORD=capstone_password
DATABASE_URL=postgresql://capstone_user:capstone_password@postgres:5432/capstone_db

# ===========================================
# Redis 설정
# ===========================================
REDIS_URL=redis://redis:6379

# ===========================================
# 보안 설정
# ===========================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# API 키 설정
# ===========================================
PERPLEXITY_API_KEY=your-perplexity-api-key-here
GOOGLE_API_KEY=your-google-api-key-here
NAVER_CLOVA_CLIENT_ID=your-naver-clova-client-id-here
NAVER_CLOVA_CLIENT_SECRET=your-naver-clova-client-secret-here

# ===========================================
# 애플리케이션 설정
# ===========================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
LOG_LEVEL=INFO
